<UserControl
    x:Class="NetworkService.Views.MeasurementGraphView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NetworkService.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="450"
    mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel>
            <Grid Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="25"
                    Margin="10,0,0,0"
                    Command="{Binding NavigateToEntitiesCommand}"
                    Content="Entities" />

                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding Title}" />

                <Button
                    Grid.Column="2"
                    Width="50"
                    Height="25"
                    Margin="0,0,10,0"
                    Command="{Binding NavigateToDisplayCommand}"
                    Content="Display" />
            </Grid>

            <ComboBox
                Width="150"
                Height="25"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                ItemsSource="{Binding Entities}"
                SelectedItem="{Binding SelectedEntity}" />

            <!--  Y osu i Bars  -->
            <Grid Margin="30,20,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Y axis labels  -->
                <ItemsControl Grid.Column="0" ItemsSource="{Binding YAxisLabels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Height="400"
                                VerticalAlignment="Bottom"
                                Rows="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="0,0,5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Grid Grid.Column="1">
                    <Canvas Height="370">
                        <!--  Y axis  -->
                        <Line
                            Stroke="Black"
                            StrokeThickness="2"
                            X1="0"
                            X2="0"
                            Y1="0"
                            Y2="370" />
                        <!--  Y axis arrow  -->
                        <Polyline
                            Fill="Black"
                            Points="-5,0  0,-10  5,0"
                            Stroke="Black"
                            StrokeThickness="2" />

                        <!--  X axis  -->
                        <Line
                            Stroke="Black"
                            StrokeThickness="2"
                            X1="0"
                            X2="320"
                            Y1="370"
                            Y2="370" />

                        <Polyline
                            Fill="Black"
                            Points="320,365  330,370  320,375"
                            Stroke="Black"
                            StrokeThickness="2" />

                    </Canvas>

                    <ItemsControl ItemsSource="{Binding Bars}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel
                                    Height="400"
                                    VerticalAlignment="Bottom"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="5,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">
                                    <Border
                                        Width="{Binding Width}"
                                        Height="{Binding Height}"
                                        Background="{Binding Fill}" />
                                    <TextBlock
                                        Margin="0,2,0,0"
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Text="{Binding Label}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>


            <!--  Legenda  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <!--  Valid  -->
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Rectangle
                        Width="15"
                        Height="15"
                        Fill="Green"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="Valid values" />
                </StackPanel>

                <!--  Invalid  -->
                <StackPanel
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Rectangle
                        Width="15"
                        Height="15"
                        Fill="Red"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="Invalid values" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
